<div class="container-fluid">
  <div class="row mt-2 m-1 p-3">

    <div class="col-6 cards">
      <% @heroes.each do |heroe| %>
        <div class="category">
          <%= link_to hero_path(heroe) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),
              url(<%=heroe.image_hero%>);">
              <h2><%= heroe.name.capitalize %> </h2>
              <p><%= heroe.likes.count %> <%= (heroe.likes.count) == 1 ? 'Like' : 'Likes'%></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-6 p-2">
      <div id="map"
         style="
         position: sticky;
         width: 100%;
         height: 100vh;
         top:10px;
         box-shadow: 0 0 15px rgba(0,0,0,0.2);
         border-radius:10px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
